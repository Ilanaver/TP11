<p>Formulario de Registro</p>
<form action='@Url.Action("Registro","Account")' onsubmit="return verificarContraseña()" class="Registro">
    <input class="controls" autocomplete="off" type="text" name="username" required placeholder="Ingrese nombre de usuario">
    <input class="controls" autocomplete="off" type="password" name="contraseña" id="contraseña1" required placeholder="Ingrese contraseña">
    <input class="controls" autocomplete="off" type="password" name="contraseña2" id="contraseña2" required placeholder="Ingrese nuevamente su contraseña">
    <input class="controls" autocomplete="off" type="text" name="nombre" required placeholder="Ingrese su nombre">
    <input class="controls" autocomplete="off" type="text" name="email" required placeholder="Ingrese su email">
    <input class="controls" autocomplete="off" type="tel" name="telefono" required placeholder="Ingrese su telefono">
    <input class="botons" type="submit" value="Cargar" >

    <p id="errorIngreso"></p>
</form>